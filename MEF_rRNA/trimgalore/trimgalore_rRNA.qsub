#!/bin/bash
#$ -cwd
#$ -j y
#$ -l h_rt=1:0:0
#$ -l h_vmem=4G
#$ -pe smp 8
#$ -t 1-6
#$ -o logs/

ix=$SGE_TASK_ID
sample=$(sed -n -e "$SGE_TASK_ID p" /data/Blizard-Rakyan/Selin/projects/MEF_rRNA/raw_data/libname.txt)
echo "${sample}: Started"

ifd="/data/Blizard-Rakyan/Selin/projects/MEF_rRNA/raw_data/${sample}/"
fqc_ofd="/data/Blizard-Rakyan/Selin/projects/MEF_rRNA/RNA-Seq/data/fastqc_trimmed/${sample}/"
ofd="/data/Blizard-Rakyan/Selin/projects/MEF_rRNA/RNA-Seq/data/trimmed/${sample}/"

R1=`find "${ifd}" | grep "_1.fq.gz"`
R2=`find "${ifd}" | grep "_2.fq.gz"`

mkdir -p $fqc_ofd
mkdir -p $ofd

module load trimgalore
module load pigz

trim_galore \
    --fastqc_args "-o $fqc_ofd" \
    --paired \
    --cores ${NSLOTS} \
    --output_dir ${ofd} \
    ${R1} ${R2}

echo "${sample}: Finished"
