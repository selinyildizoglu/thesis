samples=($(ls -d /data/Blizard-Rakyan/Selin/projects/mouse_strains/WGBS/data/bismark/*/))
ix=$(( $SGE_TASK_ID-1 ))
path=${samples[$ix]}
sample=$(basename $path)

echo "${sample}: Started"

ofd="../../data/bismark/${sample}"
cd $ofd

ls *.bai  >/dev/null 2>&1 && 
    echo "${sample}: Previously indexed" &&
    exit

fn=$(ls | grep "pe.bam")
ofn="${fn}.sorted"

echo "${sample}: Sorting"
module load -s samtools
( samtools sort -o ${ofn} -@ $NSLOTS $fn &&
    mv $ofn $fn &&
    echo "${sample}: Sorted" &&
    samtools index $fn &&
    echo "${sample}: Indexed" &&
    echo "${sample}: Finished" ) ||
    echo "${sample}: Error"
